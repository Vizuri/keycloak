<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">
    <changeSet author="jli@vizuri.com" id="1.1.1.Final-SNAPSHOT">
        <createTable tableName="ROLE_ATTRIBUTE">
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="VARCHAR(255)"/>
            <column name="ROLE_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addColumn tableName="KEYCLOAK_ROLE">
            <column name="FEDERATION_LINK" type="VARCHAR(255)"/>
        </addColumn>

        <addPrimaryKey columnNames="NAME, ROLE_ID" constraintName="CONSTRAINT_1_1_1_FINAL_1" tableName="ROLE_ATTRIBUTE"/>
        <addForeignKeyConstraint baseColumnNames="ROLE_ID" baseTableName="ROLE_ATTRIBUTE" constraintName="FK_1_1_1_FINAL_2" referencedColumnNames="ID" referencedTableName="KEYCLOAK_ROLE"/>
    </changeSet>
</databaseChangeLog>
